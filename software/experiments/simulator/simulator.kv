#:kivy 1.0.9
#:import Vector kivy.vector.Vector

<HandPlotterSimulator>:
    cols: 2

    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 1, 0.5
            Ellipse:
                pos: Vector(root.center_x, root.center_y) - Vector(300, 300)
                size: 600, 600
        canvas.after:
            Color:
                rgba: 1, 0, 0, 1
            Ellipse:
                pos: Vector(root.center_x, root.center_y) + Vector(root.target_pos_x, root.target_pos_y) - Vector(5, 5)
                size: 10, 10

        Arm:
            id: arm_base_left
            color: (255, 0, 0)
            pos: (root.width/2, 20)
            angle: 135
        Arm:
            id: arm_base_right
            color: (0, 255, 0)
            pos: (root.width/2, 20)
            angle: 45

        Arm:
            id: arm_end_left
            color: (0, 0, 255)
            pos: (root.width/2, 20)
            angle: 45
        Arm:
            id: arm_end_right
            color: (0, 255, 255)
            pos: (root.width/2, 20)
            angle: 135


    BoxLayout:
        size_hint_x: None
        width: 120
        height: 400
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 0.1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Label:
                text: 'X '

            Button:
                size_hint_x: None
                width: 50
                text: '-'
                on_press: root.target_pos_x -= 10
            Button:
                size_hint_x: None
                width: 50
                text: '+'
                on_press: root.target_pos_x += 10

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Label:
                text: 'Y '

            Button:
                size_hint_x: None
                width: 50
                text: '-'
                on_press: root.target_pos_y -= 10
            Button:
                size_hint_x: None
                width: 50
                text: '+'
                on_press: root.target_pos_y += 10

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Label:
                text: 'POS:'
            Label:
                text: str(root.target_pos_x) + ':' + str(root.target_pos_y)

        BoxLayout:
            size_hint_y: 1
