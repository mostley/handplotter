#:kivy 1.0.9

<HandPlotterSimulator>:
    cols: 2

    BoxLayout:
        Arm:
            id: arm_base_left
            color: (255, 0, 0)
            pos: (root.width/2, 20)
            angle: 135
            length: 100
        Arm:
            id: arm_base_right
            color: (0, 255, 0)
            pos: (root.width/2, 20)
            angle: 45
            length: 100

        Arm:
            id: arm_end_left
            color: (0, 0, 255)
            pos: (root.width/2, 20)
            angle: 45
            length: 100
        Arm:
            id: arm_end_right
            color: (0, 255, 255)
            pos: (root.width/2, 20)
            angle: 135
            length: 100


    BoxLayout:
        size_hint_x: None
        width: 120
        height: 400
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 0.1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Label:
                text: 'X'

            Button:
                size_hint_x: None
                width: 50
                text: '-'
                on_press: root.target_pos_x -= 1
            Button:
                size_hint_x: None
                width: 50
                text: '+'
                on_press: root.target_pos_x += 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Label:
                text: 'Y'

            Button:
                size_hint_x: None
                width: 50
                text: '-'
                on_press: root.target_pos_y -= 1
            Button:
                size_hint_x: None
                width: 50
                text: '+'
                on_press: root.target_pos_y += 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Label:
                text: 'POS:'
            Label:
                text: str(root.target_pos_x) + ':' + str(root.target_pos_y)

        BoxLayout:
            size_hint_y: 1